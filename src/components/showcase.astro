---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import sites from "~/data/showcase/sites.json";
---

<ContentSection title="Showcase" id="showcase">
  <Fragment slot="lead">
    Sites incríveis <span class="text-primary">para seu negócio</span>.{" "}
    <span class="text-primary">Seu site</span> do jeito que você {" "}
    <span class="text-primary">precisa</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {sites.map(({ title, image, url }) => (
        <ShowcaseCard title={title} image={image} url={url} />
      ))}
    </div>
    <p class="text-sm text-right">
      <a class="text-primary" href="https://astro.build/showcase/">
        ...e muito mais! &rarr;
      </a>
    </p>
  </div>
</ContentSection>
